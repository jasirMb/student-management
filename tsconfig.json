{
  "compilerOptions": {
    "module": "Node16",          
    "moduleResolution": "Node16",
    "target": "ESNext",          
    "outDir": "./dist",          
    "rootDir": "./src",          
    "strict": true,              
    "esModuleInterop": true,     
    "skipLibCheck": true,        
    "resolveJsonModule": true    
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
